extends layout

block content 

    section.sign-up-section
        div.form-container
            form(method="POST")
                div.form-group
                    label(for="username") #[strong Username: ]
                    input(type="text" id="username", name="username")

                div.form-group
                    label(for="password") #[strong Password: ]
                    input(type="password" id="password", name="password" autocomplete="on")

                div.form-group
                    label(for="confirm_password") #[strong Confirm Password: ]
                    input(type="password" id="confirm_password", name="confirm_password") 

                button.btn-submit(type="submit") Submit


        if errors 
            each error in errors
                p !{error.msg}
